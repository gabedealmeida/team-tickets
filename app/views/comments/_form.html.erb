<% edit ||= false %>

<div class="<%= edit ? 'col-md-6 mx-auto' : 'mb-5 ml-5 mr-5'%>">
  <%= render 'shared/errors', obj: @comment %>
  <%= form_with local: true, model: [@ticket, @comment] do |f| %>
    <div class="form-group <%= edit ? '' : 'col-md-6' %>">
      <%= f.label :body, 'Add a comment:' %>
      <%= f.text_area :body, required: 'true', autofocus: 'true', class: "form-control" %>
    </div>
    <div class="form-group mb-4 <%= edit ? '' : 'col-md-2' %>">
      <%= f.label :status, 'Change ticket status:' %>
      <%= select_tag :status, options_for_select(Ticket::STATUS, @ticket.status), class: "form-control" %>
    </div>
    <div class="form-group <%= edit ? '' : 'col-md-2' %>">
      <%= f.submit class: 'btn blue-btn' %>
      <% if edit %>
        <%= link_to "Cancel", ticket_path(@ticket), class: "ml-2 btn red-btn" %>
      <% end %>
    </div>
  <% end %>
</div>
