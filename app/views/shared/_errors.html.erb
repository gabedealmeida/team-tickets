<% if obj.errors.any? %>
  <div class="mx-auto">
    <div class="alert alert-danger" role="alert">
      <h5>Please fix the following errors:</h5>
      <ul>
        <% obj.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
