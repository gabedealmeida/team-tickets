<%= render 'shared/content_title', title: 'Log in' %>

<div class="col-md-6 mx-auto">
  <%= form_tag '/login' do %>
    <div class="form-group">
      <%= label_tag :username %>
      <%= text_field_tag :username, '', class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, '', class: "form-control" %>
    </div>
    <div class="form-group">
      <%= submit_tag 'Login', class: "btn blue-btn" %>
      <%= link_to "Cancel", root_path, { class: "ml-2 btn red-btn" } %>
    </div>
  <% end %>
</div>
